{
    "compilerOptions": {
      "baseUrl": ".",
      "rootDir": ".",
      "paths": {
        "@vendor/*": ["./vendor/*"]
      },
      "target": "es2021",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "strict": true,
      "outDir": "out",
      "sourceMap": false
    },
    "include": [
      "./**/*.ts"
    ],
    "ts-node":{
      "require": ["tsconfig-paths/register"],
      "skipIgnore": true
    }
  }